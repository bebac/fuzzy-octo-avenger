<!doctype html>
<html lang="en">

<head>
  <link rel="stylesheet" type="text/css" href="/assets/master.css">
  <script src="/assets/master.js"></script>
</head>

<body>

  <div id="now-playing-container">
    <div id="now-playing"></div>
    <div id="controls"></div>
  </div>

  <script type="text/template" id="album-details-view">
    <div>
      <div class="cover">
        <img src="<%%= cover_path %>">
      </div>
      <h1><%%= title %></h1>
      <h2><%%= artist %></h2>
      <hr>
      <ol class="track-list">
      </ol>
    </div>
  </script>

  <div id="album-details-container" class="hidden">
    <div id="album-details">
    </div>
  </div>

  <div id="albums-view-container">
    <div id="albums-view">
      <script type="text/template" id="album-view">
        <div class="album">
          <div class="title-wrap">
            <div class="title">
              <p><%%= title %></p>
            </div>
          </div>
          <div class="cover">
            <img src="<%%= cover_path %>">
          </div>
          <div class="artist">
            <%%= artist %>
          </div>
        </div>
      </script>
    </div>
  </div>

</body>

</html>